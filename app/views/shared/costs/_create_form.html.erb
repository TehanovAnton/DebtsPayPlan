<%= form_with url: user_group_costs_path(current_user, @group), model: cost do |form| %>
  <%= form.number_field :cost_value, 
                        class: 'form-control number-field-controll',
                        placeholder: 'Cost value'
  %>

  <%= form.hidden_field :costable_type, value: current_user.class.name %>
  <%= form.hidden_field :costable_id, value: current_user.id %>
  <%= form.hidden_field 'group_member_attributes[group_id]', value: @group.id %>
  <%= form.button 'Creat cost', class: 'btn mt-1' %>
<% end %>