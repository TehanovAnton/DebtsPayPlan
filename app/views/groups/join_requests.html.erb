<div class="container">
  <div class="row">
    <div class="list-group">
      <% @notifications.each do |notification| %>
        <% user = notification.params[:user] %>

        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= user.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= notification.created_at.strftime("%e %B %Y") %></h6>

            <a href="#"
               class="card-link px-2">
              Accept
            </a>
            
            <a href="#"
               class="card-link px-2">
              Reject
            </a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>