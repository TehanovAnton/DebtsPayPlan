<div class="container">
  <div class="row">
    <div class="list-group">
      <% @notifications.each do |notification| %>
        <% user = notification.params[:user] %>

        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= user.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= notification.created_at.strftime("%e %B %Y") %></h6>

            <%= link_to 'Accept',
                        add_user_member_group_path(@group, user_id: user.id, notification_id: notification.id),
                        method: :post,
                        class: "card-link px-2" %>
            
            <%= link_to 'Reject',
                        reject_join_request_group_path(@group, user_id: user.id, notification_id: notification.id),
                        method: :post,
                        class: "card-link px-2" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>