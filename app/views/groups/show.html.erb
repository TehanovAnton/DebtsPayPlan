<div class="container">
  <div class="row">
    <div class="col">
      User
    </div>
    <div class="col">
      User Costs
    </div>
  </div>

  <% @group.users.each do |user| %>
    <div class="row">
      <div class="col">
        <%= user.name %>
      </div>

      <div class="col">
        <%= user.costs.group_cost(@group)&.cost_value %>
      </div>
    </div>
  <% end %>
</div>