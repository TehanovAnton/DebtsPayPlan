<div class="container">
  <div class="row py-5">
    <div class="col">
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">User</th>
            <th scope="col">Costs sum</th>
            <th scope="col">Debt</th>
          </tr>
        </thead>

        <tbody>
          <% @group.users.each_with_index do |user, i| %>
          <% group_user_info = Services::Info::GroupUserInfoService.new(user, @group) %>
            <tr>

            <% if user == current_user %>
              <% activity_class = "table-active" %>
            <% else %>
              <% activity_class = "" %>
            <% end %>

              <th scope="row" class=<%= activity_class %>>
                <%= i + 1 %>
              </th>

              <td class=<%= activity_class %> ><%= user.name %></td>
              <td class=<%= activity_class %> ><%= group_user_info.costs_sum %></td>
              <td class=<%= activity_class %> ><%= group_user_info.debt&.debt_value %></td>
            </tr>
          <% end %>
        </tbody>

        <tfoot>
          <tr>
            <td>Group cost</td>
            <td><%= @group.cost&.cost_value %></td>
            <td></td>
            <td></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th scope="col">Costs:</th>
          </tr>
        </thead>

        <tbody>
          <% group_current_user_info = Services::Info::GroupUserInfoService.new(current_user, @group) %>
          <% group_current_user_info.costs.each_with_index do |cost, i| %>
            <tr>
              <td><%= i + 1 %></td>
              <th><%= cost.cost_value %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>