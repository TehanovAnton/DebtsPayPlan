<div class="container">
  <div class="row py-5">
    <%= turbo_frame_tag 'group' do %>
      <p>
        <%= link_to @group.name, edit_group_path(@group) %>
      </p>
    <% end %>
  </div>

  <div class="row py-5">
    <div class="col group-table">
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">User</th>
            <th scope="col">Costs sum</th>
            <th scope="col">Debt</th>
          </tr>
        </thead>

        <tbody>
          <% @group.users.each_with_index do |user, i| %>
          <%= render partial: '/shared/groups/group_user_row', locals: { cur_user: current_user, user:, group: @group, index: i } %>
          <% end %>
        </tbody>

        <tfoot>
          <%= render partial: '/shared/groups/group_cost_row', locals: { group: @group } %>
        </tfoot>
      </table>
    </div>
  </div>

 <div class="row px-3">
    <div class="col py-3 sections-nav">
      <div id="carouselExampleControls" class="carousel carousel-dark slide row justify-content-md-center" data-bs-touch="false" data-bs-interval="false"> 
        <div class="container">
          <div class="row">
            <div class="col"></div>
            <div class="carousel-inner col">

              <div class="carousel-item active">
                <div class="row">
                  <div class="col text-center">
                    <%= render '/shared/groups/group_user_costs' %>
                  </div>
                </div>
              </div>

              <div class="carousel-item">
                <div class="row">
                  <div class="col text-center">
                    <%= render 'shared/groups/group_user_debt_steps' %>
                  </div>
                </div>
              </div>

              <div class="carousel-item">
                <div class="row">
                  <div class="col text-center">
                    <%= render partial: 'shared/costs/create_form', locals: { cost: Cost.new } %>
                  </div>
                </div>
              </div>

              <div class="carousel-item">
                <div class="row">
                  <div class="col text-center">
                    <%= render partial: 'shared/debt_steps/create_form', locals: { debt_step: DebtStep.new } %>
                  </div>
                </div>
              </div>

            </div>
            <div class="col"></div>
          </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span><</span>
        </button>

        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span>></span>
        </button>
      </div>
    </div>
  </div> 
</div>