<div class="container">
  <div class="row">
    <%= form_with url: groups_path do |form| %>
      <%= form.label 'group[name]', "New group:" %>
      <%= form.text_field 'group[name]' %>

      <%= form.hidden_field 'group[group_owner_member_attributes[group_memberable_type]]', value: current_user.class.name %>
      <%= form.hidden_field 'group[group_owner_member_attributes[group_memberable_id]]', value: current_user.id %>
      <%= form.hidden_field 'group[group_owner_member_attributes[type]]', value: GroupOwnerMember.name %>
      <%= form.submit "Create" %>
    <% end %>
  </div>
</div>